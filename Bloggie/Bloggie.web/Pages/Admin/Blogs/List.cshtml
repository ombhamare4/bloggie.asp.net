@page
@model Bloggie.web.Pages.Admin.Blogs.ListModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>All BlogsPost List</h1>
    </div>
</div>

@* <partial name="_Notification"> *@

@if (Model.BlogPosts != null)
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td>Publish Date</td>
                    <td>Visible</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogs in Model.BlogPosts)
                {
                    <tr>
                        <td>
                            @blogs.Id
                        </td>
                        <td>
                            @blogs.Heading
                        </td>
                        <td>
                            @blogs.PublishedDate
                        </td>
                        <td>
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" role="switch" id="visibleInput"
                                       disabled asp-for="@blogs.Visible" readonly>
                            </div>
                        </td>
                        <td>
                            <a href="/Admin/Blogs/Edit/@blogs.Id">View</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container">
        <p>No Logs Found</p>
    </div>
}
