@page
@using Bloggie.web.Models.ViewModels;
@using Bloggie.web.Enums;

@{
    var notification = (Notification)ViewData["Notification"];

    if (notification != null)
    {
        var notificationType = "";

        switch (notification.NotificationType)
        {
            case NotificationType.Success:
                notificationType = "bg-success";
                break;
            case NotificationType.Error:
                notificationType = "bg-danger";
                break;
            case NotificationType.Info:
                notificationType = "bg-info";
                break;
            default:
                break;
        }
        <div class="container">
            <div class="alert @notificationType alert-dismissible fade show mb-5" role="alert">
                @Html.Raw(notification.Message)
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
}